# Define local variables and functions.

script=${0##*/}                       # Script name.
prefix="$g$t$script:$n "              # Message prefix.
export prefix

function title {
    echo -e "\n$prefix$1"
}

function check {
    if [[ $exit_code != 0 ]]; then
        echo "$prefix$r$t$1$n"
        error='yes'
    fi
}

for pkg in "$@"; do
    
    if [[ $pkg == 'all' || $pkg == 'base' ]]; then  # Upgrade/install baseline packages.
    
        title 'upgrading the rpiOS distribution'
        apt-get update
        apt-get -y dist-upgrade
        exit_code=$?
        check 'dist-upgrade error'
    
        title 'installing avahi-utils and rgpiod'
        apt-get -y install avahi-utils rgpiod
        exit_code=$?
        check 'installation error'
    
        title 'configuring and restarting rgpiod'
        sed -i "/DAEMON/s/-l//" /etc/default/rgpiod
        exit_code=$?
        check 'rgpiod options editing error'
        systemctl restart rgpiod
        exit_code=$?
        systemctl -n0 status rgpiod
        check 'rgpiod restart error'
    fi
    
    if [[ $pkg == 'all' || $pkg == 'samba' ]]; then  # Install samba for file sharing.
    
        title 'installing samba'
        apt-get update
        apt-get -y install samba samba-common-bin
        exit_code=$?
        check 'samba installation error'
    
        title 'configuring and restarting samba'
        sed -i "/homes/,/netlogon/{s/yes/no/;s/= 0700/= 0775/}" /etc/samba/smb.conf
        exit_code=$?
        check 'samba config editing error'
        systemctl restart smbd
        exit_code=$?
        systemctl -n0 status smbd
        check 'smbd restart error'
    fi
    
    if [[ $pkg == 'all' || $pkg == 'ser2sock' ]]; then  # Install ser2sock and telnet.
    
        title 'installing ser2sock'
        cd /usr/local
        exit_code=$?
        if [[ $exit_code == 0 ]]; then
            p2pkg -y -gio ser2sock-scripts
            exit_code=$?
        fi
        check 'ser2sock installation error'
    
        title 'installing telnet'
        apt-get update
        apt-get -y install telnet
        exit_code=$?
        check 'telnet installation error'
    fi
done

title 'removing unneeded packages'
apt-get -y autoremove
exit_code=$?
check 'autoremove error'

if [[ -z $error ]]; then
    title 'completed successfully'
else
    title "$r${t}failed with one or more errors$n"
fi
echo
